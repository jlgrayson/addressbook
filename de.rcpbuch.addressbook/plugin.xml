<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.rcpbuch.addressbook.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.rcpbuch.addressbook.Perspective"
            id="de.rcpbuch.addressbook.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.rcpbuch.addressbook.SwtTestsViewPart"
            id="de.rcpbuch.addressbook.SwtTestsViewPart"
            name="SWT Tests"
            restorable="true">
      </view>
   </extension>

</plugin>
