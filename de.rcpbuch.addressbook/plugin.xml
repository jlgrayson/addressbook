<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.rcpbuch.addressbook.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.rcpbuch.addressbook.Perspective"
            id="de.rcpbuch.addressbook.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.rcpbuch.addressbook.SwtTestsViewPart"
            id="de.rcpbuch.addressbook.SwtTestsViewPart"
            name="SWT Tests"
            restorable="true">
      </view>
      <view
            class="de.rcpbuch.addressbook.AddressListViewPart"
            id="de.rcpbuch.addressbook.AddressListViewPart"
            name="Adressen"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="de.rcpbuch.addressbook.file"
               label="File">
         <command
               commandId="org.eclipse.ui.file.save"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.saveAll"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.close"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.closeAll"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator4"
               visible="true">
         </separator>
         <command
               commandId="de.rcpbuch.addressbook.duplicateCheck"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.exit"
               style="push">
         </command>
         </menu>
         <menu
               id="de.rcpbuch.addressbook.edit"
               label="Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <separator
                  name="de.rcpbuch.addressbook.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
            </command>
            <separator
                  name="de.rcpbuch.addressbook.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  style="push">
            </command>
         </menu>
         <menu
               id="help"
               label="Hilfe">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.dynamicHelp"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.rcpbuch.addressbook.filetoolbar">
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.rcpbuch.addressbook.duplicateCheck"
            name="Find duplicates">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.rcpbuch.addressbook.AddressListRefreshHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="de.rcpbuch.addressbook.AddressListViewPart">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="de.rcpbuch.addressbook.AddressDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="de.rcpbuch.addressbook.data.Address">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.rcpbuch.addressbook.application"
            name="Adressbuch">
         <property
               name="appName"
               value="Adressbuch">
         </property>
         <property
               name="aboutText"
               value="Adressbuch - RCP Beispielanwendung">
         </property>
      </product>
   </extension>

</plugin>
