<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.rcpbuch.addressbook.internal.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.rcpbuch.addressbook.internal.address.AddressPerspective"
            icon="icons/book.png"
            id="de.rcpbuch.addressbook.addressPerspective"
            name="Adressen">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            icon="icons/book.png"
            id="de.rcpbuch.addressbook.addresslist"
            name="Adressen"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="de.rcpbuch.addressbook.file"
               label="Datei">
         <command
               commandId="org.eclipse.ui.newWizard"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.save"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.saveAll"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.close"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.closeAll"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.import"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.export"
               style="push">
         </command>
         <separator
               name="de.rcpbuch.addressbook.separator4"
               visible="true">
         </separator>
         <separator
               name="de.rcpbuch.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.exit"
               style="push">
         </command>
         </menu>
         <menu
               id="de.rcpbuch.addressbook.edit"
               label="Bearbeiten">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <separator
                  name="de.rcpbuch.addressbook.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
            </command>
            <separator
                  name="de.rcpbuch.addressbook.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  style="push">
            </command>
         </menu>
         <menu
               id="window"
               label="Fenster">
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  style="push">
            </command>
         </menu>
         <menu
               id="help"
               label="Hilfe">
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.helpSearch"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.dynamicHelp"
                  style="push">
            </command>
            <separator
                  name="help.separator"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.rcpbuch.addressbook.filetoolbar">
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.rcpbuch.addressbook.internal.address.list.AddressListRefreshHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="de.rcpbuch.addressbook.AddressListViewPart">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.springframework.util.SpringExtensionFactory:addressDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="de.rcpbuch.addressbook.entities.Address">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.rcpbuch.addressbook.application"
            name="Adressbuch">
         <property
               name="appName"
               value="Adressbuch">
         </property>
         <property
               name="aboutText"
               value="Adressbuch - RCP Beispielanwendung">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.help.dynamicHelp"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F1">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="de.rcpbuch.addressbook.CreateAddressWizard"
            name="Neue Adresse">
      </wizard>
   </extension>

</plugin>
