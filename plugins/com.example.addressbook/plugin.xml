<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.example.addressbook.internal.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.example.addressbook.application"
            name="Address Book">
         <property
               name="appName"
               value="Address Book">
         </property>
         <property
               name="aboutText"
               value="%Address_Book">
         </property>
         <property
               name="windowImages"
               value="icons/book_16.png,icons/book_32.png,icons/book_48.png,icons/book_64.png,icons/book_128.png">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="5DA8E5">
         </property>
         <property
               name="startupMessageRect"
               value="5,260,290,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,280,290,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.example.addressbook.internal.ui.AddressPerspective"
            icon="icons/book_16.png"
            id="com.example.addressbook.AddressPerspective"
            name="%Addresses">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.example.addressbook.internal.ui.AddressListViewPart"
            icon="icons/book_16.png"
            id="com.example.addressbook.AddressList"
            name="%Addresses"
            restorable="true">
      </view>
	  <view
        	id="org.eclipse.ui.views.ProgressView"
        	class="org.eclipse.ui.ExtensionFactory:progressView"
        	icon="/icons/pview.gif"
			allowMultiple="false"
        	name="%Progress"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.example.addressbook.open"
            name="%Open">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="%File">
         <command
               commandId="org.eclipse.ui.newWizard"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.save"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.saveAll"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.close"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.closeAll"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.import"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.export"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator4"
               visible="true">
         </separator>
         <separator
               name="com.example.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.exit"
               style="push">
         </command>
         </menu>
         <menu
               id="edit"
               label="%Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  style="push">
            </command>
         </menu>
         <menu
               id="window"
               label="%Window">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  style="push">
            </command>
         </menu>
         <menu
               id="help"
               label="%Help">
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.helpSearch"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.dynamicHelp"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.example.addressbook.filetoolbar">
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.example.addressbook.AddressList">
         <command
               commandId="com.example.addressbook.open"
               id="com.example.addressbook.open.default"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.edit.delete"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.example.addressbook.internal.ui.AddressListRefreshHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="com.example.addressbook.addresslist">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.example.addressbook.internal.ui.AddressDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="com.example.addressbook.entities.Address">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.help.dynamicHelp"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F1">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.ui.ExtensionFactory:newKeysPreferencePage"
            id="newKeysPreferencePage"
            name="Keys">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.themes">
      <theme
            id="com.example.addressbook.theme"
            name="Address Book Theme">
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_START"
               value="93,168,229">
         </colorOverride>
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_END"
               value="140,190,230">
         </colorOverride>
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_TEXT_COLOR"
               value="COLOR_WHITE">
         </colorOverride>
      </theme>
   </extension>
</plugin>
