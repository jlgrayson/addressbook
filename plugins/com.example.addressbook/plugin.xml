<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.example.addressbook.internal.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.example.addressbook.internal.address.AddressPerspective"
            icon="icons/book.png"
            id="com.example.addressbook.addressPerspective"
            name="%Addresses">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.example.addressbook.internal.address.list.AddressListViewPart"
            icon="icons/book.png"
            id="com.example.addressbook.addresslist"
            name="%Addresses"
            restorable="true">
      </view>
	  <view
        	id="org.eclipse.ui.views.ProgressView"
        	class="org.eclipse.ui.ExtensionFactory:progressView"
        	icon="/icons/pview.gif"
			allowMultiple="false"
        	name="%progress"/>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="com.example.addressbook.file"
               label="%File">
         <command
               commandId="org.eclipse.ui.newWizard"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.save"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.saveAll"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.close"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.closeAll"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.import"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.file.export"
               style="push">
         </command>
         <separator
               name="com.example.addressbook.separator4"
               visible="true">
         </separator>
         <separator
               name="com.example.addressbook.separator5"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.exit"
               style="push">
         </command>
         </menu>
         <menu
               id="com.example.addressbook.edit"
               label="%Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  style="push">
            </command>
         </menu>
         <menu
               id="window"
               label="%Window">
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  style="push">
            </command>
         </menu>
         <menu
               id="help"
               label="%Help">
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.helpSearch"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.dynamicHelp"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.example.addressbook.filetoolbar">
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.example.addressbook.internal.address.list.AddressListRefreshHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="com.example.addressbook.addresslist">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.example.addressbook.internal.address.list.AddressDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="com.example.addressbook.entities.Address">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.example.addressbook.application"
            name="Address Book">
         <property
               name="appName"
               value="Address Book">
         </property>
         <property
               name="aboutText"
               value="%Address_Book">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.help.dynamicHelp"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F1">
      </key>
   </extension>

</plugin>
